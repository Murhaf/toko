#!/bin/bash

j="01"
for i in 02 03 04 05 06 07 08 09
do
    echo $i
    ./wapiti train -c --nthread 12 -p /ltg/murhaff/msc/tokenizer/erg-tokenizer/crf/templates/wikiwoods-template -m /ltg/murhaff/msc/tokenizer/erg-tokenizer/crf/models/wikiwoods/$j.model  /ltg/murhaff/msc/tokenizer/erg-tokenizer/data/wikiwoods/data/$i.tks.wp > /ltg/murhaff/msc/tokenizer/erg-tokenizer/crf/models/wikiwoods/$i.model 
    #PID=$!
    #echo $PID
    #while [ -d /proc/$PID ] ; do
#	sleep 1
 #   done
    
    j=$i 
    ./wapiti label -m /ltg/murhaff/msc/tokenizer/erg-tokenizer/crf/models/wikiwoods/$i.model -c /ltg/murhaff/msc/tokenizer/erg-tokenizer/crf/data/final/test.tks.wp  > /ltg/murhaff/msc/tokenizer/erg-tokenizer/crf/results/wikiwoods/$i.result 2> /ltg/murhaff/msc/tokenizer/erg-tokenizer/crf/results/wikiwoods/$i.acc 
    

done



